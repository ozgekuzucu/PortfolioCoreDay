@model PortfolioCoreDay.Entities.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<h1>Hizmet Güncelleme İşlemi</h1>

<form method="post">
    <input type="hidden" asp-for="ServiceId" />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid black">
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid black">
    <br />
    <label>Durum</label>
    <input type="text" asp-for="Status" class="form-control" style="border:1px solid black">
    <br />
    <label>Icon</label>
    <input type="text" asp-for="Icon" class="form-control" style="border:1px solid black">
    <br />
    <button class="btn btn-primary">Hizmeti Güncelle</button>
</form>

