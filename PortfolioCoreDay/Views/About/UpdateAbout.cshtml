@model PortfolioCoreDay.Entities.About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h1>Hakkımda Sayfası Güncelleme Girişi</h1>

<form method="post">
    <input type="hidden" asp-for="AboutId" />
    <label>Ad Soyad</label>
    <input type="text" asp-for="NameSurname" class="form-control" style="border:1px solid black">
    <br />
    <label>Yaş</label>
    <input type="text" asp-for="Age" class="form-control" style="border:1px solid black">
    <br />
    <label>Ünvan</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid black">
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid black">
    <br />
    <label>Alt Açıklama</label>
    <input type="text" asp-for="SubDescription" class="form-control" style="border:1px solid black">
    <br />
    <label>Website</label>
    <input type="text" asp-for="Website" class="form-control" style="border:1px solid black">
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" style="border:1px solid black">
    <br />
    <label>Telefon</label>
    <input type="text" asp-for="Phone" class="form-control" style="border:1px solid black">
    <br />
    <label>Görsel 1</label>
    <input type="text" asp-for="ImageUrl1" class="form-control" style="border:1px solid black">
    <br />
    <label>Görsel 2</label>
    <input type="text" asp-for="ImageUrl2" class="form-control" style="border:1px solid black">
    <br />
    <button class="btn btn-primary">Hakkımda Bilgisi Güncelle</button>
</form>

