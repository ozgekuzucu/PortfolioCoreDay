@model List<About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Hakkımda İşlemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Yaş</th>
        <th>Ünvan</th>
        <th>Açıklama</th>
        <th>Alt Açıklama</th>
        <th>Website</th>
        <th>Telefon</th>
        <th>Şehir</th>
        <th>Görsel 1</th>
        <th>Görsel 2</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.NameSurname</td>
            <td>@item.Age</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.SubDescription</td>
            <td>@item.Website</td>
            <td>@item.Phone</td>
            <td>@item.City</td>
            <td>@item.ImageUrl1</td>
            <td>@item.ImageUrl2</td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
