@model List<Skill>
<section id="skills" class="skills section light-background">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Yeteneklerim</h2>
        <p> Modern yazılım geliştirme süreçlerini takip ediyorum ve her projede en verimli çözümleri üretmeye odaklanıyorum. Aşağıda, uzmanlık alanlarım ve bildiğim teknolojiler bulunmaktadır.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="200">

        <div class="row skills-content skills-animation">

            @foreach (var item in Model)
            {
                <div class="col-lg-6">

                    <div class="progress">
                        <span class="skill"><span>@item.SkillName</span> <i class="val">@item.SkillValue</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item.SkillValue" aria-valuemin="0" aria-valuemax="@item.SkillValue"></div>
                        </div>
                    </div><!-- End Skills Item -->

                </div>
            }

        </div>

    </div>

</section><!-- /Skills Section -->