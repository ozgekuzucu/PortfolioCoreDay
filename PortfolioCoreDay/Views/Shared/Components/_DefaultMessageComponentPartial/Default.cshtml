@model Message

<div class="col-lg-7">
    <form action="/Message/SendMessage" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
        <div class="row gy-4">

            <div class="col-md-6">
                <label for="name-field" class="pb-2">Ad Soyad</label>
                <input type="text" asp-for="NameSurname" id="name-field" class="form-control" required="">
            </div>

            <div class="col-md-6">
                <label for="email-field" class="pb-2">Mail</label>
                <input type="email" class="form-control" asp-for="Email" id="email-field" required="">
            </div>

            <div class="col-md-12">
                <label for="subject-field" class="pb-2">Konu</label>
                <input type="text" class="form-control" asp-for="Subject" id="subject-field" required="">
            </div>

            <div class="col-md-12">
                <label for="message-field" class="pb-2">Mesaj</label>
                <textarea class="form-control" asp-for="MessageDetail" rows="10" id="message-field" required=""></textarea>
            </div>

            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-outline-primary">Mesajı Gönder</button>
            </div>

        </div>
    </form>
</div><!-- End Contact Form -->